{
	"name": "do-sharding",
	"version": "0.0.0",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"deploy": "npm run build && wrangler deploy",
		"cf-typegen": "wrangler types",
		"db": "npm-run-all --parallel db:**",
		"db:durable:publisher": "npx drizzle-kit generate --config ./src/durable/Publisher/db/drizzle.config.ts",
		"db:durable:subscriber": "npx drizzle-kit generate --config ./src/durable/Subscriber/db/drizzle.config.ts",
		"db:durable:coordinator": "npx drizzle-kit generate --config ./src/durable/Coordinator/db/drizzle.config.ts"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.2.2",
		"@types/node": "^22.15.18",
		"drizzle-kit": "^0.31.1",
		"drizzle-orm": "^0.43.1",
		"npm-run-all": "^4.1.5",
		"temporal-polyfill": "^0.3.0",
		"typescript": "^5.5.2",
		"vite": "^6.3.5",
		"wrangler": "^4.15.2"
	}
}
